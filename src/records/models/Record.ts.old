import { Column, Entity, Generated, PrimaryColumn } from "typeorm";

const RECORDS_TABLE_NAME = process.env.PROPERTIES_TABLE_NAME;

@Entity(RECORDS_TABLE_NAME)
export class Record {
  @PrimaryColumn()
  public id!: string;

  @Column()
  public propertyId!: string

  @Column()
  public amount!: string

  @Column()
  public date!: number;

  public constructor(id: string, amount: string, date: number) {
    this.id = id;
    this.amount = amount;
    this.date = date;
  }
}
